<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Application.MainActivityDetail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Background ImageView -->
                        <ImageView
                            android:id="@+id/backgroundImageView"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/house1" />

                        <!-- Dark overlay -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:background="#dd000000" />

                        <!-- Main ImageView -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:cardCornerRadius="28dp">

                            <ImageView
                                android:id="@+id/mainImageView"
                                android:layout_width="250dp"
                                android:layout_height="320dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/house1" />
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_shape"
                        android:contentDescription="TODO"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/back"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/likeButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_shape"
                        android:contentDescription="TODO"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_thumb_up_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title"
                        style="@style/CustomFontTextView"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="350dp"
                        android:text="Title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
                        app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <!-- First Icon and Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconStar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="TODO"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_star_rate_24" />

                    <TextView
                        android:id="@+id/score"
                        style="@style/CustomFontTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconNet"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="TODO"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_access_time_24" />

                    <TextView
                        android:id="@+id/time"
                        style="@style/CustomFontTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconDate"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="TODO"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_date_range_24" />

                    <TextView
                        android:id="@+id/date"

                        style="@style/CustomFontTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary" />
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/summaryIcon"
                android:layout_width="28dp"
                android:layout_marginStart="12dp"

                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_announcement_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/summarytext"
                style="@style/CustomFontTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Summary"
                app:layout_constraintStart_toEndOf="@+id/summaryIcon"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/plot"
                style="@style/CustomFontTextView"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="12dp"

                android:layout_height="wrap_content"
                android:text="someday something nad andn asdnflkasndfa ksjndfkajsf"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/summarytext" />


            <ImageView
                android:id="@+id/actorsIcon"
                android:layout_width="28dp"
                android:layout_marginTop="16dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:layout_marginStart="12dp"

                android:scaleType="fitCenter"
                android:src="@drawable/baseline_person_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plot" />

            <TextView
                android:id="@+id/actorsText"
                android:layout_marginTop="16dp"
                style="@style/CustomFontTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"

                android:text="Actors"
                app:layout_constraintStart_toEndOf="@+id/actorsIcon"
                app:layout_constraintTop_toBottomOf="@+id/plot" />

            <TextView
                android:id="@+id/actors"
                style="@style/CustomFontTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"

                android:layout_marginTop="16dp"
                android:text="someday something nad andn asdnflkasndfa ksjndfkajsf"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actorsIcon" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/actors"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/linear_layout_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

